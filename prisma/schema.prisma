generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paste {
  id             String   @id
  content        String
  max_views      Int?
  view_count     Int      @default(0)
  expires_at     DateTime?
  created_at     DateTime @default(now())
}
